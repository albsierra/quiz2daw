<table>
<% var i; for (i=0; i < quizes.length; i ++) { %>
	<tr>
		<td>
			<a href="quizes/<%= quizes[i].id %>"><%= i+parseInt(1)+". "+quizes[i].pregunta %></a>
		</td>
            <%if(session.user){%>
                <td>
			<a href="quizes/<%= quizes[i].id %>/edit"><button>edit</button></a>
		</td><td>
			<form method="post" action="quizes/<%=quizes[i].id%>?_method=delete">
                            <button type="submit" ocClick="return confirm('Borrar: <%=quizes[i].pregunta%>');">Borrar</button>
                        </form>
		</td>
            <%}%>
	</tr>
<% } %>
</table>
<%if(session.user){%>
    <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<%}%>